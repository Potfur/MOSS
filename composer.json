{
	"name": "moss/moss",
	"version": "v0.8.4-beta",
	"description": "The PHP micro-framework",
	"keywords": ["microframework"],
	"type": "framework",
	"license": "MIT",
	"authors": [
		{
			"name": "Michal Wachowski",
			"email": "wachowski.michal@gmail.com"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/potfur/moss-locale"
		},
		{
			"type": "vcs",
			"url": "https://github.com/potfur/moss-twig-bridge"
		}
	],
	"require": {
		"php": ">=5.3.4"
	},
	"require-dev": {
		"phpunit/phpunit": "3.7.*"
	},
	"suggest": {
		"moss/storage": "Simple ORM (data mapper), accelerates logic development",
		"moss/locale": "Translation/localisation class based on one from Sf2",
		"moss/bridge": "Adds Twig as templating engine with additional functionalities"
	},
	"autoload": {
		"psr-0": { "": "src/", "Moss": "" }
	}
}